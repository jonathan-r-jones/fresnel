<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:Fresnel.Views;assembly=Fresnel" x:Class="Fresnel.HomePage">
	<ContentPage.Content>
		<Grid Padding="20">
            <Label
                HeightRequest="55" 
                HorizontalTextAlignment="Center"
                LineBreakMode="WordWrap" 
                Text="The idea was to maybe slice up the Daily Executive Report into a series of online images."
                TextColor="MidnightBlue"
                />
            <local:PinchToZoomContainer>
				<local:PinchToZoomContainer.Content>
                    <Image Source="shark_finning_infographic.jpg" />
				</local:PinchToZoomContainer.Content>
			</local:PinchToZoomContainer>
		</Grid>
	</ContentPage.Content>
</ContentPage>