<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fresnel.Views.MonkeyPage"
            Title="{Binding Name}">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20" Spacing="10">
                <Image Source="{Binding Image}"/>
                <Label Text="{Binding Location}"/>
                <Label x:Name="Label1" Text="{Binding Details}"/>
                <Button Text="Tap for a SPOKEN description!" Clicked="OnButtonClicked"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>